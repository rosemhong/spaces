<% include ../partials/header %>

<!-- <div class="container"> -->
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Spaces</h1>
			<p>From cozy corner caf√©s to late-night study spots, find your favorite spaces here.</p>
			<p>
				<form class="form-inline" action="/spaces" method="GET">
					<a class="btn btn-primary btn-lg" href="/spaces/new">Create a New Space</a>
					<div id="search" class="form-group">
						<input type="text" name="search" placeholder="Cambridge, Wi-Fi, etc." class="form-control">
						<input type="submit" value="Search" class="btn btn-default">
					</div>
				</form>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap">
		<div class="col-lg-12">
			<h3>Our Spaces</h3>
		</div>
		<% spaces.forEach(function(space) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= space.image %>">
					<div class="caption">
						<h4><%= space.name %></h4>
					</div>
					<p>
						<a href="/spaces/<%= space._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }) %>
	</div>
<!-- </div> -->

<% include ../partials/footer %>